    <record id="view_employee_checklist_form" model="ir.ui.view">
        <field name="name">hr.entry.checklist.form</field>
        <field name="model">hr.entry.checklist</field>
        <field name="arch" type="xml">
            <form string="Entry Checklist">
                <sheet>
                    <group>
                        <field name="category"/>
                        <field name="name"/>
                        <field name="description" invisible='1'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_employee_checklist_tree" model="ir.ui.view">
        <field name="name">hr.entry.checklist.tree</field>
        <field name="model">hr.entry.checklist</field>
        <field name="arch" type="xml">
            <tree string="Entry Checklist">
                <field name="name"/>
                <field name="category"/>
            </tree>
        </field>
    </record>

    <record id="open_view_checklist_form" model="ir.actions.act_window">
        <field name="name">Entry Checklist</field>
        <field name="res_model">hr.entry.checklist</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_prent_id': 1}</field>
    </record>

    <record id="view_hr_entry_checklist_search" model="ir.ui.view">
        <field name="name">view.hr.entry.checklist.search</field>
        <field name="model">hr.entry.checklist</field>
        <field name="arch" type="xml">
            <search string="HR Entry Checklist">
                <field name="category"/>
                <!-- <field name="prent_id"/> -->
                <field name="name"/>
                <field name="description"/>
                <group expand="0" string="Group By">
                    <filter name="group_category" string="Parent" context="{'group_by':'category'}"/>
                </group>
            </search>
        </field>
    </record>

    <menuitem
        id="menu_view_employee_checklist_form"
        action="open_view_checklist_form"
        parent="hr.menu_human_resources_configuration"
        groups="base.group_no_one,nl_master.group_hr_employee_read_only"
        sequence="1"/>

</odoo>