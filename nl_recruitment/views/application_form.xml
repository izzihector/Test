   <template id="supplier_registration" name="Job Application">
      <t t-call="website.layout">
         <head>
            <meta charset="UTF-8"/>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css"/>
            <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta.2/css/bootstrap.css'/>
            <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/12.1.2/css/intlTelInput.css'/>
            <link rel='stylesheet' href='https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css'/>
            <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/css/nice-select.min.css'/>
            <link rel="stylesheet" href="/nl_recruitment/static/src/css/nice-select.css"/>
            <link rel="stylesheet" href="/nl_recruitment/static/src/css/style.css"/>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css"/>
         </head>
         <body>
            <section class="multi_step_form">
               <xpath expr="//form" position="replace">
              
               <form id="msform" class="form-vertical hr_recruit_extended" method="post" role="form" action="/jobs/thankyou" novalidate="false"  enctype="multipart/form-data" >
                  <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                  <!-- Tittle -->
                  <div class="tittle">
                     <h2 style="color:#555;">Job Application Form</h2>
                     <h6 t-if="job" class="text-muted">
                        <span t-field="job.name"/>
                     </h6>
                  </div>
                  <!-- progressbar -->
                  <ul id="progressbar" style="display:flex;">
                     <li class="active">1.Personal Information</li>
                     <li>2.Educational Information</li>
                     <li>3.Experience Information</li>
                     <li>4.Upload Documents</li>
                  </ul>
                  
                  <fieldset class="fieldset-1">
                    <div class="application-form">
                        <div class="side-by-side">
                           <div class="form-group  text-left" style="width: 50%;
                              margin-right: 20px;">
                              <label class="label-color" for="first_name">First Name <span style="color:#bd6d6d;">*</span></label>
                              <input type="text" name="first_name" class="form-control first_name" id="formGroupExampleInput"/>
                           </div>
                           <div class="form-group  text-left" style="width: 50%;
                              margin-right: 20px;">
                              <label class="label-color" for="last_name">Last Name <span style="color:#bd6d6d;">*</span></label>
                              <input type="text" name="last_name" class="form-control last_name" id="formGroupExampleInput"/>
                           </div>
                           <div class="form-group  text-left" style="width: 50%;
                              margin-right: 20px;">
                              <label class="label-color" for="father_name">Father's Name <span style="color:#bd6d6d;">*</span></label>
                              <input type="text" name="father_name" class="form-control father_name" id="formGroupExampleInput"/>
                           </div>
                        </div>
                        <div class="side-by-side">
                           <div class="form-group  text-left" style="width: 50%;
                              margin-right: 20px;">
                              <label class="label-color" for="gender">Gender <span style="color:#bd6d6d;">*</span></label>
                              <select name="gender" class="product_select gender">
                                 <option selected="1" value="none">Choose...</option>
                                 <option value="male">Male</option>
                                 <option value="female">Female</option>
                              </select>
                           </div>
                           <div class="form-group  text-left" style="width: 50%;
                              margin-right: 20px;">
                              <label class="label-color" for="gender">Highest Qualification <span style="color:#bd6d6d;">*</span></label>
                              <select name="highest_qualification" class="product_select highest_qualification">
                                 <option selected="1" value="none">Choose...</option>
                                 <option value="1">Primary</option>
                                 <option value="2">Secondary</option>
                                 <option value="3">Higher Secondary</option>
                                 <option value="4">Bachelor</option>
                                 <option value="5">Master</option>
                                 <option value="6">Doctorate</option>
                              </select>
                           </div>
                           <div class="form-group  text-left" style="width: 50%;
                              margin-right: 20px;">
                              <label class="label-color" for="date_of_birth">Date of Birth <span style="color:#bd6d6d;">*</span></label>
                              <input type="date" class="form-control date_of_birth" name="date_of_birth" id="formGroupExampleInput" placeholder="Example input placeholder"/>
                           </div>
                        </div>
                        <div class="side-by-side">
                           <div class="form-group text-left" style="width: 100%;
                              margin-right: 20px;" >
                              <label class="label-color" for="nationality">Nationality <span style="color:#bd6d6d;">*</span></label>
                              <select name="nationality" class="product_select list nationality" >
                                 <option data-display="Select"></option>
                                 <option selected="1" value="none">Choose...</option>
                                 <t t-foreach="countries" t-as="country">
                                    <option t-att-value="country.id">
                                       <t t-esc="country.name"/>
                                    </option>
                                 </t>
                              </select>
                           </div>
                           <div class="form-group  text-left" style="width: 100%;
                              margin-right: 20px;">
                              <label class="label-color" for="email">Email <span style="color:#bd6d6d;">*</span></label>
                              <input type="email" class="form-control email" name="email" id="formGroupExampleInput" />
                           </div>
                             <div class="form-group text-left" style="width: 100%;
                              margin-right: 20px;" >
                              <label class="label-color" for="phone_number">Phone <span style="color:#bd6d6d;">*</span></label>
                              <input type="number" id="phone" class="form-control phone_number" name="phone_number" placeholder=""/> 
                           </div>
                        </div>
                      </div>
                       <button type="button" class="next btn first-button  action-button btn-secondary">Next</button> 
                  </fieldset>
                  <fieldset class="fieldset-1">
                    <div class="application-form">
                        <div class="row">
                            <div class="col-lg-10">
                            <span class="error-edu d-none" style="color:red">
                            Please Add Educational Details
                            </span>
                            <input type="hidden" name="education_generalized1" class="education_generalized1"/>
                            <input type="hidden" name="education_generalized2" class="education_generalized2"/>
                            <input type="hidden" name="education_generalized3" class="education_generalized3"/>
                            <input type="hidden" name="education_generalized4" class="education_generalized4"/>
                            <input type="hidden" name="education_generalized5" class="education_generalized5"/>
                            </div>
                            <div class="col-lg-2"></div>
                        </div>
                        <table id="academic_desc_table" class="table table-bordered">
                            <thead>
                                <tr>
                                    <td scope="col">Start Year</td>
                                    <td scope="col">Completion Year</td>
                                    <td scope="col">Degree</td>
                                    <td scope="col">Specialization</td>
                                    <td scope="col">University</td>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            
                        </table>
                        <div class="d-flex justify-content-end mb-3">
                            <button type="button" class="academic_btn btn btn-info ">
                                <i class="fa fa-plus"></i> <span class="ml-2">Add New</span>
                            </button>
                        </div>
                        <br/>
                        <br/>
                    </div>
                    <button type="button" class="action-button previous previous_button">Back</button>
                    <button type="button" class="next second-button action-button">Next</button> 
                  </fieldset>
                  <fieldset class="fieldset-1">
                    <div class="application-form">
                        <div class="row">
                            <div class="col-lg-10">
                            <span class="error-exp d-none" style="color:red">
                            Please Add Experience Details
                            </span>
                            <input type="hidden" name="experience_generalized1"
                                class="experience_generalized1"/>
                            <input type="hidden" name="experience_generalized2"
                                class="experience_generalized2"/>
                            <input type="hidden" name="experience_generalized3"
                                class="experience_generalized3"/>
                            <input type="hidden" name="experience_generalized4"
                                class="experience_generalized4"/>
                            <input type="hidden" name="experience_generalized5"
                                class="experience_generalized5"/>
                            </div>
                            <div class="col-lg-2"></div>
                        </div>
                        <table id="experience_desc_table" class="table table-bordered">
                            <thead>
                                <tr>
                                    <td scope="col">Job Title</td>
                                    <td scope="col">Company</td>
                                    <td scope="col">Start Date</td>
                                    <td scope="col">End Date</td>
                                    <td scope="col">Actions</td>
                                </tr>
                            </thead>
                            
                        </table>
                        <div class="d-flex justify-content-end mb-3">
                            <button type="button" class="experience_btn btn btn-info ">
                                <i class="fa fa-plus"></i> <span class="ml-2">Add New</span>
                            </button>
                        </div>
                     </div>
                     <button type="button" class="action-button previous previous_button">Back</button> 
                     <button type="button" class="next third-button action-button">Next</button>  
                  </fieldset>
                  <fieldset class="fieldset-1">
                    <div class="application-form">

                        <div class="row">
                            <div class="col-lg-12">
                                <h3 style="margin-bottm:30px;">Please upload any of your most recent resume.</h3>
                            </div>
                            <div class="mb-5 col-lg-12">
                                    <input type="file" class="custom-file-input candidate-resume" name="candidate-resume" id="upload"/>
                                    <label class="custom-file-label" for="upload" id="name_placeholder"><i class="ion-android-cloud-outline" ></i> Choose file</label>
                                    <input type="hidden" name="candidate-resume-holder" class="candidate-resume-holder"/>
                                    <input type="hidden" name="job_id" class="job" t-att-value="job.id"/>
                              </div>
                            </div>
                    </div>
                     <button type="button" class="action-button previous previous_button mt-5">Back</button> 
                     <button type="submit" class="do-submit action-button fourth-button mt-5">Submit</button>  
                  </fieldset>
               </form>
               
               
               <t t-call="nl_recruitment.nl_recruit_my_academic_details"/>
               <t t-call="nl_recruitment.nl_recruit_my_experience_details"/>
            </xpath>
               <div class="height-150"></div>
            </section>
         </body>
         <script src="https://unpkg.com/@popperjs/core@2"></script>
         <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
         <script src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta/js/bootstrap.min.js'></script>
         <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js'></script>
        
         <script src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js'></script>
      
         <script src="/nl_recruitment/static/src/js/form.js"></script>
